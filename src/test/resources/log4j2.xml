<?xml version="1.0" encoding="UTF-8"?>
  <Configuration status="WARN">
    <Appenders>
      <Console name="ConsoleAppender" target="SYSTEM_OUT">
        <PatternLayout pattern="%style{%d{yyyy-MM-dd HH:mm:ss}}{yellow} %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} %logger{36} - %message%n"/>
      </Console>
      <File name="FileAppender" fileName="target/evidence/logs/app.log">
        <PatternLayout pattern="%style{%d{yyyy-MM-dd HH:mm:ss}}{yellow} %highlight{%-5level}{FATAL=bg_red, ERROR=red, WARN=yellow, INFO=green} %logger{36} - %message%n"/>
      </File>
    </Appenders>
    <Loggers>
      <Root level="info">
        <AppenderRef ref="ConsoleAppender"/>
        <AppenderRef ref="FileAppender"/>
      </Root>
    </Loggers>
  </Configuration>
